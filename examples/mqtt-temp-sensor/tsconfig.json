{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es2015",
        "dom"
      ],
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "removeComments": true,
      "noLib": false,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "declaration": true
    },
    "include": [
      "src/**/*"
    ]
  }