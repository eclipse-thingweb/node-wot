{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": { "type": "string" },
        "servient": {
            "type": "object",
            "properties": {
                "clientOnly": {
                    "description": "setting if no servers shall be started",
                    "type": "boolean",
                    "default": false
                },
                "staticAddress": {
                    "type": "string",
                    "description": "hostname or IP literal for static address config"
                }
            },
            "additionalProperties": false
        },
        "http": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                },
                "address": {
                    "type": "string"
                },
                "baseUri": {
                    "type": "string"
                },
                "urlRewrite": {
                    "type": "object",
                    "description": "map (from URL -> to URL) defining HTTP URL rewrites",
                    "additionalProperties": { "type": "string" }
                },
                "proxy": {
                    "type": "object",
                    "description": "object with 'href' field for the proxy URI, scheme field for either 'basic' or 'bearer', and corresponding credential fields as defined below",
                    "required": ["href"],
                    "properties": {
                        "href": {
                            "type": "string"
                        },
                        "scheme": {
                            "enum": ["basic", "bearer"]
                        },
                        "token": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "allowSelfSigned": {
                    "description": "whether self-signed certificates should be allowed",
                    "type": "boolean"
                },
                "serverKey": {
                    "type": "string"
                },
                "serverCert": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "mqtt": {
            "type": "object",
            "properties": {
                "broker": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "clientId": {
                    "type": "string"
                },
                "protocolVersion": {
                    "type": "integer",
                    "enum": [3, 4, 5],
                    "default": 5
                }
            },
            "additionalProperties": false
        },
        "coap": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                }
            },
            "additionalProperties": false
        },
        "credentials": {
            "type": "object",
            "patternProperties": {
                "^THING_ID([a-zA-Z0-9_]+)$": {
                    "type": "object",
                    "properties": {
                        "token": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "logLevel": {
            "type": "string",
            "enum": ["debug", "info", "warn", "error"]
        }
    },
    "additionalProperties": false
}
