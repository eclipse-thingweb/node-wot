{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
