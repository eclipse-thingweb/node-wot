{
	"compilerOptions": {
		"target": "es5",
		"lib" : ["es2015","dom"],
		"module": "commonjs",
		"outDir": "dist",
		"alwaysStrict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"noLib": false,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	]
}
